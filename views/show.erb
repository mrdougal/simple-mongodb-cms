<% @title = @page.title %>


<article>
	
	<h1><%= @title %></h1>
	<p class="meta"><%= human_date @page.created_at %></p>
	
	
	<%= @page.body_html %>	


</article>


<aside>

	<ul class="tags">
		<% @page['tags'].each do |tag| %>
		<li><a href="<%= url('/tags/' << tag) %>"><%= tag %></a></li>
		<% end %>
	</ul>

	<%= erb :_comments if @page.comments %>
	
	
</aside>